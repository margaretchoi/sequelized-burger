<section class="parallax">
    <img src="/assets/images/burger-icon.png">
</section>


<main>
    <section class="burger-options">
        <div class="options">
        <h2>Add a Burger</h2>
        <form class="create-update-form" action="/" method="POST">
            <div class="form-group">
                <label for="bn">Burger Name</label>
                <input type="text" id="bn" name="burger_name" class="drawn-border">
                <button class="add-burger" type="submit">Add Burger</button>
            </div>
        </form>
        </div>
        <div class="options">
            <div>
                <h2>Available Burgers</h2>
                <ul id="avail-burgers">
                  {{#each burgers}}
                   {{#unless this.devoured}}
                      <li>
                        {{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                          <input type="hidden" name="id" value="{{this.id}}">
                          <button type="submit">Devour It!</button>
                        </form>
                      </li>
                    {{/unless}}
                  {{/each}}
                </ul>
            </div>
        </div>
        <div class="options">
            <h2>Devoured Burgers</h2>

            <ul id="avail-burgers">
              {{#each burgers}}
                {{#if this.devoured}}
                  <li>
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=DELETE" method="POST">
                      <input type="hidden" name="id" value="{{this.id}}">
                      <button type="submit">DELETE!</button>
                    </form>
                  </li>
                {{/if}}
              {{/each}}
            </ul>
        </div>
    </section>
</main>